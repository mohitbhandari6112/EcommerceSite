@model IEnumerable<Product>

<div class="row" pb-3>
    @foreach (var obj in Model)
    {
        <div class="col-12 col-md-6 col-lg-3 mb-3">
            <div class="card border-0 p-3 rounded shadow">
                <div style="height:220px">
                    <img src="@obj.ImageUrl" alt="img of product" class="card-img-top rounded h-100 object-fit-cover" />
                </div>
                <div class="card-body">
                    <div class="pl-1">
                        <div class="card-title h5 opacity-75 text-center text-uppercase">@obj.Title</div>
                        <div class="card-title text-warning text-center">@obj.Author</div>
                    </div>
                    <div class="pl-1">
                        <div class="text-dark text-center text-opacity-75">List Price:<span class="text-decoration-line-through">@obj.ListPrice.ToString("c")</span></div>

                        <div class="text-dark text-center text-opacity-75">As low as:<span>@obj.Price100.ToString("c")</span></div>
                    </div>
                  
                </div>
                <a asp-action="Details" asp-route-id="@obj.Id" class="btn btn-primary w-100">Details</a>
            </div>
        </div>
    }
</div>
