@page
@model Ecommerce_Razoer.Pages.Categories.DeleteModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3 p-0">
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled/>
        </div>
        <div class="row">
            <input asp-for="Category.Id" hidden/>
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Index" asp-controller="Category" class="btn btn-secondary form-control">Back to List</a>
            </div>
        </div>

    </div>
</form>
